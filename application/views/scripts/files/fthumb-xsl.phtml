<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:variable name="icons_src_dir"> </xsl:variable>
	<xsl:variable name="photos_dir"> </xsl:variable>
	
	<xsl:template match="item">
		<img border='0' class="dhx_folders_item_img">
			<xsl:attribute name="src"><xsl:value-of select="$img_src_dir"/>/<xsl:value-of select="./@src"/></xsl:attribute>
		</img>
		<div class="dhx_folders_item_text">
			<span><xsl:value-of select="substring-before(./@name,'.')"/></span>
		</div>
	</xsl:template>
	
</xsl:stylesheet>